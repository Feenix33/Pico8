--[[
shake - shake the screen
from nerdyteachers.com
]]--
-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====


-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====
function _init() --iiiiiii
  -- screen shake vars
  intensity = 0 -- amount to shake, decays to 0
  shake_ctrl = 5 -- starting shake intesity
end

function shake()
  local shake_x = rnd(intensity) - (intensity / 2)
  local shake_y = rnd(intensity) - (intensity / 2)

  -- offset the camera
  camera (shake_x, shake_y)

  -- ease shake and return to normal
  intensity *= 0.9
  if intensity  < 03 then intensity = 0 end
end

function _update() --uuuuuuuu
  -- run shake when intensity is high
  if intensity > 0 then shake() end

  -- up, increase shake
  if btnp(⬆️) 
    and shake_ctrl < 10 then
        shake_ctrl += 1 
    end

  -- down, decrease shake
  if btnp(⬇️) 
    and shake_ctrl > 0 then 
        shake_ctrl -= 1 
    end

  -- x, trigger shake
  if btnp(5) then intensity += shake_ctrl end

  -- change face based on shake intensity
  eye_sz = 7+intensity/2
  mouth_sz = 2+intensity/2
end

function _draw() --dddddd
  cls(12)
  --circfill (63, 63, 40, 6)
  draw_nerdy_teacher()

  -- below unaffected by shake after camers is reset
  camera()
  print ('intensity', 2, 2, 7)
  print (intensity, 10, 9, 7)
  print ('shake', 47, 2, 0)
  print("❎",53,9,0)
  print ("shake control", 75, 2, 7)
  print("⬆️/⬇️ = "..shake_ctrl,85,9, 7)
end

-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====
function draw_nerdy_teacher()
    --body
    rectfill(55,90,70,110,6)--neck
    rect(55,90,71,110,5)--neck outline
    circfill(63,140,41,7)--body
    circ(63,140,41,6)--body outline
    circfill(63,110,15,7)--collar
    circfill(63,93,7,6)--collar negative
    line(63,100,63,128,6)--shirt line
    --face
    circfill(63,58,35,6)--face
    circ(63,58,35,5)--face outline
    --hair
    rectfill(29,37,97,52,5)--sides
    circfill(63,58,31,6)--hair line skin
    rectfill(35,28,89,36,5)--hair line hair 
    circfill(91,35,5,5)--far left
    circfill(80,28,7,5)
    circfill(67,25,7,5)
    circfill(55,25,7,5)
    circfill(44,28,7,5)
    circfill(35,35,5,5)--far right  
    --glasses
    line(20,62,106,62,0)
    line(19,63,107,63,0)--midlines
    line(20,64,106,64,0)
    rectfill(25,50,55,80,7)--white l
    rectfill(70,50,101,80,7)--white r
    rect(25,50,56,80,0)--outlines l
    rect(24,49,57,81,0)
    rect(70,50,101,80,0)--outlines r
    rect(69,49,102,81,0)
    --eyes
    circfill(43,65,eye_sz,0)--l
    circfill(83,65,eye_sz,0)--r
    --mouth
    circfill(63,85,mouth_sz,5)
    --bow
    circfill(63,107,6,0)
        --triangles
    j=2
    for i=0,20 do
        line(40,97+i,40+j,97+i,0)     
        if(i<9)j+=2
        if(i>10)j-=2
    end
    for i=0,20 do
        line(84,97+i,84+j,97+i,0)     
        if(i<9)j-=2
        if(i>10)j+=2
    end
end
