-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====
-- Globals
-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====
floor = {}
dude = {}
dir={l=1,r=2,d=3,u=4}



-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====
-- Generics
-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====

function isfree(x,y)
    printh("coord "..x.." "..y.." = "..floor[y][x])
    if floor[y][x] == 81 then
        return true
    end
    return false
end

function move(d)
    if d==dir.l then
        if isfree(dude.x-1, dude.y) then
            dude.x -=1
        end
    elseif d==dir.r then
        if isfree(dude.x+1, dude.y) then
            dude.x +=1
        end
    elseif d==dir.u then
        if isfree(dude.x, dude.y-1) then
            dude.y -=1
        end
    elseif d==dir.d then
        if isfree(dude.x, dude.y+1) then
            dude.y +=1
        end
    else
        printh("Error unknown direction")
    end
    printh("dude at "..dude.x.." "..dude.y)
end

-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====
-- base functions
-- ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== ===== =====

function _init()
    -- print a runtime note
    local div,m
    dude.x=-1
    dude.y=-1
    m=stat(94)
    if m < 10 then div=":0" else div=":" end
    printh (stat(93)..div..stat(94).." ---------------------------------------- ")
    -- init the floor
    local f = {
        "wwwwwwwwwwwwwwww", 
        "w          x   w", 
        "w              w", 
        "wvvvvo  x      w", 
        "w              w", 
        "w              w", 
        "wwwwwwwwwwwwwwww", 
    }
    for r=1,#f do
        row= {}
        for c=1,16 do
            tok=sub(f[r],c,c)
            if tok == 'w' then
                nspr=84
            elseif tok==" " then
                nspr= 81
            elseif tok=="v" then
                nspr= 85
            elseif tok=="x" then
                nspr= 2
            elseif tok=="o" then
                dude.x = c-1
                dude.y = r-1
                printh("dude at "..dude.x.." "..dude.y)
                --nspr= 53
                nspr= 81
            end
            add(row, nspr)
        end
        add(floor,row)
    end
end

function _update()

    if btnp(0) then
        --printh("Btn 0 left")
        move(dir.l)

    elseif btnp(1) then
        --printh("Btn 1 right")
        move(dir.r)

    elseif btnp(2) then 
        --printh("Btn 2")
        move(dir.u)

    elseif btnp(3) then --printh("Btn 3 left")
        --printh("Btn 3 down")
        move(dir.d)

    elseif btnp(4) then
        printh("Btn 4")

    elseif btnp(5) then
        printh("button 5")
    end
end

function _draw()
    cls()
    rect(0, 0, 127, 127, 6)
    --[[
    c = 1
    for x=0,127,8 do 
        for y=0, 127, 8 do
            c = (c+1) % 5
            rect(x,y, x+7, y+7, c+1)
        end
    end
    ]]--
    y=0
    for r=1,#floor do
        x=0
        for c=1,#floor[r] do
            spr(floor[r][c],x,y)
            x+=8
        end
        y+=8
    end
    spr(53,dude.x*8,dude.y*8)
end

